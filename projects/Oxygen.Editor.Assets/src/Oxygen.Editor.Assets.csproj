<?xml version="1.0" encoding="utf-8"?>

<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net9.0-windows10.0.26100.0</TargetFrameworks>

        <Title>Oxygen Editor World Model</Title>
        <Description>Shared module, providing the abstractions and utilities for manipulating Oxygen assets model objects.</Description>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageTags>oxygen;gameengine;editor;assets;model</PackageTags>
        <PackageReleaseNotes>Initial version.</PackageReleaseNotes>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>

        <RootNamespace>Oxygen.Editor.Assets</RootNamespace>
        <AssemblyName>$(MSBuildProjectName)</AssemblyName>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="$(ProjectsRoot)\Oxygen.Editor.Core\src\Oxygen.Editor.Core.csproj" />
    </ItemGroup>

</Project>
