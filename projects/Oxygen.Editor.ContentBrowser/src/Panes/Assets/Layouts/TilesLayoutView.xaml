<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Oxygen.Editor.ContentBrowser.Panes.Assets.Layouts.TilesLayoutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:localcvt="using:Oxygen.Editor.ContentBrowser.Panes.Assets.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Oxygen.Editor.ContentBrowser.Models"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  Converters for icon glyphs and per-asset-type brushes  -->
        <localcvt:AssetTypeToIconConverter x:Key="AssetTypeToIconConverter" />
        <localcvt:AssetTypeToBrushConverter x:Key="AssetTypeToBrushConverter" />

        <!--  Tile template: card with icon area, colored separator line, and details area  -->
        <DataTemplate x:Key="GameAssetTemplate" x:DataType="models:GameAsset">
            <Grid Width="180">
                <Border CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="140" />
                            <RowDefinition Height="2" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Top preview/icon area  -->
                        <Grid Grid.Row="0">
                            <FontIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="48"
                                Glyph="{x:Bind AssetType, Converter={StaticResource AssetTypeToIconConverter}}" />
                        </Grid>

                        <!--  Colored separator line per asset type  -->
                        <Border
                            Grid.Row="1"
                            Height="2"
                            Background="{x:Bind AssetType, Converter={StaticResource AssetTypeToBrushConverter}}" />

                        <!--  Details  -->
                        <StackPanel Grid.Row="2" Padding="12,8,12,12">
                            <TextBlock
                                Style="{ThemeResource BodyStrongTextBlockStyle}"
                                Text="{x:Bind Name}"
                                TextTrimming="CharacterEllipsis" />
                            <TextBlock
                                Margin="0,2,0,0"
                                Opacity="0.8"
                                Style="{ThemeResource CaptionTextBlockStyle}"
                                Text="{x:Bind AssetType}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <GridView
            x:Name="BasicGridView"
            DoubleTapped="GridView_DoubleTapped"
            IsItemClickEnabled="True"
            ItemTemplate="{StaticResource GameAssetTemplate}"
            ItemsSource="{x:Bind ViewModel.Assets}"
            PointerPressed="GridView_PointerPressed"
            SelectionMode="Single">
            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem">
                    <Setter Property="Margin" Value="8" />
                </Style>
            </GridView.ItemContainerStyle>
        </GridView>
    </Grid>
</UserControl>
