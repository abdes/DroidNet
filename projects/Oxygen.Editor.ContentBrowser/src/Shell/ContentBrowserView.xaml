<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Oxygen.Editor.ContentBrowser.Shell.ContentBrowserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Oxygen.Editor.ContentBrowser.Shell"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:router="using:DroidNet.Routing.WinUI"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  ReSharper disable Xaml.PathError  -->
                <ResourceDictionary Source="ms-appx:///Oxygen.Editor.WorldEditor/Styles/GridSplitterStyles.xaml" />
                <!--  ReSharper restore Xaml.PathError  -->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="2*" MinWidth="120" />
                <ColumnDefinition Width="*" MinWidth="120" />
                <ColumnDefinition Width="0.5*" MaxWidth="100" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="0"
                Background="Transparent"
                Orientation="Horizontal">

                <AppBarButton
                    Command="{x:Bind ViewModel.GoBackCommand}"
                    Icon="Back"
                    IsEnabled="{x:Bind ViewModel.CanGoBack, Mode=OneWay}"
                    Label="Back"
                    LabelPosition="Collapsed" />
                <AppBarButton
                    Command="{x:Bind ViewModel.GoForwardCommand}"
                    Icon="Forward"
                    IsEnabled="{x:Bind ViewModel.CanGoForward, Mode=OneWay}"
                    Label="Forward"
                    LabelPosition="Collapsed" />
                <AppBarButton
                    Command="{x:Bind ViewModel.GoUpCommand}"
                    Icon="Up"
                    IsEnabled="{x:Bind ViewModel.CanGoUp, Mode=OneWay}"
                    Label="Up"
                    LabelPosition="Collapsed" />
                <AppBarButton
                    Command="{x:Bind ViewModel.RefreshCommand}"
                    Icon="Refresh"
                    Label="Refresh"
                    LabelPosition="Collapsed" />
            </StackPanel>

            <Border
                Grid.Column="1"
                MinHeight="32"
                Margin="4,0,8,0"
                Padding="6,2"
                VerticalAlignment="Center"
                Background="{ThemeResource LayerFillColorDefaultBrush}"
                BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <BreadcrumbBar
                    x:Name="Breadcrumbs"
                    ItemClicked="BreadcrumbBar_ItemClicked"
                    ItemsSource="{x:Bind ViewModel.Breadcrumbs, Mode=OneWay}">
                    <BreadcrumbBar.ItemTemplate>
                        <DataTemplate xmlns:viewModels="using:Oxygen.Editor.ContentBrowser" x:DataType="local:BreadcrumbEntry">
                            <TextBlock Text="{x:Bind Label}" />
                        </DataTemplate>
                    </BreadcrumbBar.ItemTemplate>
                </BreadcrumbBar>
            </Border>

            <Grid Grid.Column="2" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <AutoSuggestBox
                    Grid.Column="1"
                    Height="32"
                    HorizontalAlignment="Stretch"
                    PlaceholderText="Search">
                    <AutoSuggestBox.QueryIcon>
                        <SymbolIcon Symbol="Find" />
                    </AutoSuggestBox.QueryIcon>
                </AutoSuggestBox>
            </Grid>

            <CommandBar
                Grid.Column="3"
                Background="Transparent"
                DefaultLabelPosition="Collapsed"
                IsOpen="False">

                <CommandBar.PrimaryCommands>
                    <AppBarButton Icon="Filter" Label="Filter" />
                </CommandBar.PrimaryCommands>
                <CommandBar.SecondaryCommands>
                    <!--  View switching commands  -->
                    <AppBarButton Command="{x:Bind ViewModel.SwitchToListViewCommand}" Label="List view">
                        <AppBarButton.Icon>
                            <!--  Segoe Fluent Icons: List (EA37)  -->
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xEA37;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Command="{x:Bind ViewModel.SwitchToDetailViewCommand}" Label="Tiles">
                        <AppBarButton.Icon>
                            <!--  Segoe Fluent Icons: Tiles (ECA5)  -->
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xECA5;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarSeparator />
                    <AppBarButton Icon="Setting" Label="Settings">
                        <AppBarButton.KeyboardAccelerators>
                            <KeyboardAccelerator Key="I" Modifiers="Control" />
                        </AppBarButton.KeyboardAccelerators>
                    </AppBarButton>
                </CommandBar.SecondaryCommands>
            </CommandBar>

        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <router:RouterOutlet
                Grid.Column="0"
                Outlet="left"
                ViewModel="{x:Bind ViewModel.LeftPaneViewModel, Mode=OneWay}"
                VmToViewConverter="{x:Bind ViewModel.VmToViewConverter}" />

            <!--  Column Grid Splitter  -->
            <controls:GridSplitter
                Grid.Column="1"
                Width="4"
                HorizontalAlignment="Left"
                ResizeBehavior="PreviousAndNext"
                ResizeDirection="Auto"
                Style="{StaticResource InvisibleGridSplitterStyle}" />

            <router:RouterOutlet
                Grid.Column="2"
                Outlet="right"
                ViewModel="{x:Bind ViewModel.RightPaneViewModel, Mode=OneWay}"
                VmToViewConverter="{x:Bind ViewModel.VmToViewConverter}" />

        </Grid>

    </Grid>
</UserControl>
