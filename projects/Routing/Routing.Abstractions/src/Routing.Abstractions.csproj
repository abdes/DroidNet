<?xml version="1.0" encoding="utf-8"?>

<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
        <TargetFrameworks>net9.0;net9.0-windows10.0.26100.0</TargetFrameworks>

        <Title>Abstractions for the ViewModel based navigation and composition using URL-based routing</Title>
		<Description>DroidNet.Routing implements and `Angular` like router that enables navigation inside a WinUI application using a URL or by dynamically manipulating the router state.</Description>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageTags>routing;navigation;dynamic;views;viewmodel;mvvm</PackageTags>
		<PackageReleaseNotes>Initial version.</PackageReleaseNotes>

		<AssemblyName>DroidNet.Routing.Abstractions</AssemblyName>
		<RootNamespace>$(RootNamespace).Routing</RootNamespace>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Destructurama.Attributed">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>compile; runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>

</Project>
