<?xml version="1.0" encoding="utf-8"?>

<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net8.0-windows10.0.26100.0</TargetFrameworks>

        <Title>Oxygen Editor Document Storage Layer</Title>
        <Description>Abstracts the storage of documents and entities in the Oxygen Editor and include implementation for various strage providers, including the native filesystem.</Description>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageTags>oxygen;editor;storage;filesystem</PackageTags>
        <PackageReleaseNotes>Initial version.</PackageReleaseNotes>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>

        <RootNamespace>Oxygen.Editor.Storage</RootNamespace>
        <AssemblyName>$(MSBuildProjectName)</AssemblyName>
    </PropertyGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="DroidNet.Oxygen.Editor.Storage.Tests" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Testably.Abstractions" />
    </ItemGroup>

</Project>
