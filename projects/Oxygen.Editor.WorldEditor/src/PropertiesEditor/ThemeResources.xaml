<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <StaticResource x:Key="PropertyCardBackground" ResourceKey="CardBackgroundFillColorDefaultBrush" />
            <StaticResource x:Key="PropertyCardBackgroundPointerOver" ResourceKey="ControlFillColorSecondaryBrush" />
            <StaticResource x:Key="PropertyCardBackgroundPressed" ResourceKey="ControlFillColorTertiaryBrush" />
            <StaticResource x:Key="PropertyCardBackgroundDisabled" ResourceKey="ControlFillColorDisabledBrush" />

            <StaticResource x:Key="PropertyCardForeground" ResourceKey="TextFillColorPrimaryBrush" />
            <StaticResource x:Key="PropertyCardForegroundPointerOver" ResourceKey="TextFillColorPrimaryBrush" />
            <StaticResource x:Key="PropertyCardForegroundPressed" ResourceKey="TextFillColorSecondaryBrush" />
            <StaticResource x:Key="PropertyCardForegroundDisabled" ResourceKey="TextFillColorDisabledBrush" />

            <StaticResource x:Key="PropertyCardBorderBrush" ResourceKey="CardStrokeColorDefaultBrush" />
            <StaticResource x:Key="PropertyCardBorderBrushPointerOver" ResourceKey="ControlElevationBorderBrush" />
            <StaticResource x:Key="PropertyCardBorderBrushPressed" ResourceKey="ControlStrokeColorDefaultBrush" />
            <StaticResource x:Key="PropertyCardBorderBrushDisabled" ResourceKey="ControlStrokeColorDefaultBrush" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="Light">
            <StaticResource x:Key="PropertyCardBackground" ResourceKey="CardBackgroundFillColorDefaultBrush" />
            <StaticResource x:Key="PropertyCardBackgroundPointerOver" ResourceKey="ControlFillColorSecondaryBrush" />
            <StaticResource x:Key="PropertyCardBackgroundPressed" ResourceKey="ControlFillColorTertiaryBrush" />
            <StaticResource x:Key="PropertyCardBackgroundDisabled" ResourceKey="ControlFillColorDisabledBrush" />

            <StaticResource x:Key="PropertyCardForeground" ResourceKey="TextFillColorPrimaryBrush" />
            <StaticResource x:Key="PropertyCardForegroundPointerOver" ResourceKey="TextFillColorPrimaryBrush" />
            <StaticResource x:Key="PropertyCardForegroundPressed" ResourceKey="TextFillColorSecondaryBrush" />
            <StaticResource x:Key="PropertyCardForegroundDisabled" ResourceKey="TextFillColorDisabledBrush" />

            <StaticResource x:Key="PropertyCardBorderBrush" ResourceKey="CardStrokeColorDefaultBrush" />
            <StaticResource x:Key="PropertyCardBorderBrushPointerOver" ResourceKey="ControlElevationBorderBrush" />
            <StaticResource x:Key="PropertyCardBorderBrushPressed" ResourceKey="ControlStrokeColorDefaultBrush" />
            <StaticResource x:Key="PropertyCardBorderBrushDisabled" ResourceKey="ControlStrokeColorDefaultBrush" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="HighContrast">
            <StaticResource x:Key="PropertyCardBackground" ResourceKey="SystemColorButtonFaceColorBrush" />
            <StaticResource x:Key="PropertyCardBackgroundPointerOver" ResourceKey="SystemColorHighlightTextColorBrush" />
            <StaticResource x:Key="PropertyCardBackgroundPressed" ResourceKey="SystemColorHighlightTextColorBrush" />
            <StaticResource x:Key="PropertyCardBackgroundDisabled" ResourceKey="SystemControlBackgroundBaseLowBrush" />

            <StaticResource x:Key="PropertyCardForeground" ResourceKey="SystemColorButtonTextColorBrush" />
            <StaticResource x:Key="PropertyCardForegroundPointerOver" ResourceKey="SystemColorHighlightColorBrush" />
            <StaticResource x:Key="PropertyCardForegroundPressed" ResourceKey="SystemColorHighlightColorBrush" />
            <StaticResource x:Key="PropertyCardForegroundDisabled" ResourceKey="SystemControlDisabledBaseMediumLowBrush" />

            <StaticResource x:Key="PropertyCardBorderBrush" ResourceKey="SystemColorButtonTextColorBrush" />
            <StaticResource x:Key="PropertyCardBorderBrushPointerOver" ResourceKey="SystemColorHighlightColorBrush" />
            <StaticResource x:Key="PropertyCardBorderBrushPressed" ResourceKey="SystemColorHighlightTextColorBrush" />
            <StaticResource x:Key="PropertyCardBorderBrushDisabled" ResourceKey="SystemControlDisabledTransparentBrush" />
        </ResourceDictionary>

    </ResourceDictionary.ThemeDictionaries>

    <Thickness x:Key="PropertyCardBorderThickness">0,1,0,0</Thickness>
    <x:String x:Key="PropertiesExpanderChevronToolTip">Show all settings</x:String>
    <Thickness x:Key="PropertiesExpanderHeaderPadding">8,8</Thickness>
    <x:Double x:Key="PropertiesExpanderItemsSpacing">2</x:Double>
    <x:Double x:Key="PropertiesExpanderChevronButtonWidth">32</x:Double>
    <x:Double x:Key="PropertiesExpanderChevronButtonHeight">32</x:Double>
    <x:Double x:Key="PropertyCardMinWidth">148</x:Double>
    <x:Double x:Key="PropertyCardMinHeight">30</x:Double>
    <x:Double x:Key="PropertiesExpanderDescriptionFontSize">12</x:Double>
    <x:Double x:Key="PropertyCardHeaderFontSize">12</x:Double>
    <x:Double x:Key="PropertyCardLeftIndention">0</x:Double>
    <x:Double x:Key="PropertiesExpanderHeaderIconMaxSize">20</x:Double>
    <Thickness x:Key="PropertiesExpanderHeaderIconMargin">12,0, 20, 0</Thickness>
    <x:Double x:Key="PropertiesExpanderWrapThreshold">400</x:Double>
    <x:Double x:Key="PropertiesExpanderWrapNoIconThreshold">300</x:Double>

</ResourceDictionary>
