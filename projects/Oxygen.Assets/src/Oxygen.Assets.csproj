<?xml version="1.0" encoding="utf-8"?>

<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net9.0-windows10.0.26100.0</TargetFrameworks>

        <RootNamespace>Oxygen.Assets</RootNamespace>
        <AssemblyName>$(MSBuildProjectName)</AssemblyName>

        <Title>Oxygen Assets</Title>
        <Description>Oxygen.Assets is a non-UI, single-assembly asset pipeline providing canonical asset models, import→cook→annotate stages, index persistence and validation, and filesystem/pak adapters.</Description>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageTags>oxygen;gameengine;assets;pipeline;editor</PackageTags>
        <PackageReleaseNotes>Initial version.</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="$(ProjectsRoot)\Oxygen.Editor.Core\src\Oxygen.Editor.Core.csproj" />
        <ProjectReference Include="$(ProjectsRoot)\Oxygen.Storage\src\Oxygen.Storage.csproj" />
    </ItemGroup>

</Project>
