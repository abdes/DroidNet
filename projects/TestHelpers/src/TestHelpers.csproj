<?xml version="1.0" encoding="utf-8"?>

<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net9.0;net9.0-windows10.0.26100.0</TargetFrameworks>
        <RootNamespace>$(RootNamespace).TestHelpers</RootNamespace>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>

        <Title>DroidNet Test Helpers</Title>
        <Description>TestHelpers is a .NET library designed to assist with unit testing by providing utilities for logging, dependency injection, assertion handling, and event handler testing. This library includes tools to enhance the testing experience and ensure comprehensive test coverage.</Description>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageTags>oxygen;gameengine;testing;mstest</PackageTags>
        <PackageReleaseNotes>Initial version.</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="MSTest.TestFramework" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Verify.DiffPlex" />
        <PackageReference Include="Verify.MSTest" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="DryIoc.dll" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Serilog.Expressions" />
        <PackageReference Include="Serilog.Extensions.Logging" />
        <PackageReference Include="Serilog.Sinks.Debug" />
        <PackageReference Include="Destructurama.Attributed" />
    </ItemGroup>

</Project>
