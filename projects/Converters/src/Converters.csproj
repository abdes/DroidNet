<?xml version="1.0" encoding="utf-8"?>

<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net9.0-windows10.0.26100.0</TargetFrameworks>

        <RootNamespace>$(RootNamespace).Converters</RootNamespace>
        <AssemblyName>DroidNet.Converters</AssemblyName>

        <Title>Additional Value Converters</Title>
        <Description>Provides extra IValueConverter implementations, including null-to-visibility, dictionary key-to-value converters.</Description>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageTags>xaml;converters</PackageTags>
        <PackageReleaseNotes>Initial version.</PackageReleaseNotes>

    </PropertyGroup>

    <ItemGroup>
        <None Include="..\README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.WindowsAppSDK" />
        <PackageReference Include="Microsoft.Windows.SDK.BuildTools" />
    </ItemGroup>

</Project>
