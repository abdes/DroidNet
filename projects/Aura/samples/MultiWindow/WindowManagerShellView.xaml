<?xml version="1.0" encoding="utf-8" ?>

<Page
    x:Class="DroidNet.Samples.Aura.MultiWindow.WindowManagerShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DroidNet.Samples.Aura.MultiWindow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="RootPage"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock
                FontSize="32"
                FontWeight="Bold"
                Text="Aura Multi-Window Manager" />
            <TextBlock
                Margin="0,8,0,0"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Text="Demonstration of multi-window management capabilities"
                TextWrapping="Wrap" />
        </StackPanel>

        <!--  Window Statistics  -->
        <Border
            Grid.Row="1"
            Margin="0,0,0,16"
            Padding="16"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock
                        FontSize="14"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="Total Windows" />
                    <TextBlock
                        FontSize="28"
                        FontWeight="Bold"
                        Text="{x:Bind ViewModel.WindowCount, Mode=OneWay}" />
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock
                        FontSize="14"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="Active Window" />
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="{x:Bind ViewModel.ActiveWindowInfo, Mode=OneWay}"
                        TextTrimming="CharacterEllipsis" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Window Creation Controls  -->
        <StackPanel
            Grid.Row="2"
            Margin="0,0,0,16"
            Orientation="Horizontal"
            Spacing="12">
            <Button Command="{x:Bind ViewModel.CreateToolWindowCommand}" Content="New Tool Window">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="T" Modifiers="Control,Shift" />
                </Button.KeyboardAccelerators>
            </Button>

            <Button Command="{x:Bind ViewModel.CreateDocumentWindowCommand}" Content="New Document">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="D" Modifiers="Control,Shift" />
                </Button.KeyboardAccelerators>
            </Button>

            <Button
                Command="{x:Bind ViewModel.CloseAllWindowsCommand}"
                Content="Close All"
                Style="{StaticResource AccentButtonStyle}">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="W" Modifiers="Control,Shift" />
                </Button.KeyboardAccelerators>
            </Button>
        </StackPanel>

        <!--  Window List  -->
        <Border
            Grid.Row="3"
            Padding="0"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border
                    Grid.Row="0"
                    Padding="16,12"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,0,0,1">
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="Open Windows" />
                </Border>

                <ListView
                    Grid.Row="1"
                    ItemsSource="{x:Bind ViewModel.OpenWindows, Mode=OneWay}"
                    SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:WindowInfo">
                            <Grid
                                Padding="12,8"
                                Background="{x:Bind IsActive, Converter={StaticResource BoolToBackgroundConverter}, Mode=OneWay}"
                                ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock
                                        FontWeight="SemiBold"
                                        Text="{x:Bind Title, Mode=OneWay}"
                                        TextTrimming="CharacterEllipsis" />
                                    <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                        <Run Text="{x:Bind WindowType, Mode=OneWay}" />
                                        <Run Text="•" />
                                        <Run Text="{x:Bind CreatedAt, Mode=OneWay}" />
                                    </TextBlock>
                                </StackPanel>

                                <Border
                                    Grid.Column="1"
                                    Padding="8,4"
                                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                                    CornerRadius="4"
                                    Visibility="{x:Bind IsActive, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                                    <TextBlock
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                                        Text="ACTIVE" />
                                </Border>

                                <Button
                                    Grid.Column="2"
                                    Command="{Binding ElementName=RootPage, Path=ViewModel.ActivateWindowCommand}"
                                    CommandParameter="{x:Bind}"
                                    Content="Activate"
                                    IsEnabled="{x:Bind IsActive, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}" />

                                <Button
                                    Grid.Column="3"
                                    Command="{Binding ElementName=RootPage, Path=ViewModel.CloseWindowCommand}"
                                    CommandParameter="{x:Bind}"
                                    Content="Close" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!--  Empty State  -->
                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="8"
                    Visibility="{x:Bind ViewModel.WindowCount, Converter={StaticResource ZeroToVisibilityConverter}, Mode=OneWay}">
                    <FontIcon
                        FontSize="48"
                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                        Glyph="&#xE8A7;" />
                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="No windows open"
                        TextAlignment="Center" />
                    <TextBlock
                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                        Text="Create a new window using the buttons above"
                        TextAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
