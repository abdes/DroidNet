<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFrameworks>net9.0-windows10.0.26100.0</TargetFrameworks>

        <RootNamespace>Oxygen.Editor.Documents</RootNamespace>
        <AssemblyName>$(MSBuildProjectName)</AssemblyName>

        <Title>Oxygen editor document management system.</Title>
		<Description>Oxygen.Editor.Documents is the concrete implementation of document management for the Oxygen editor.</Description>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageTags>winui;documents;document-management;editor</PackageTags>
		<PackageReleaseNotes>Initial version.</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
        <PackageReference Include="Microsoft.WindowsAppSDK" />
        <PackageReference Include="Microsoft.Windows.SDK.BuildTools" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="$(ProjectsRoot)\Documents\src\Documents.csproj" />
    </ItemGroup>
</Project>
