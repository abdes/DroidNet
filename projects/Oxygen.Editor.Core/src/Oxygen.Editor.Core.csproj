<?xml version="1.0" encoding="utf-8"?>

<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net8.0;net8.0-windows10.0.22621.0</TargetFrameworks>

        <RootNamespace>Oxygen.Editor.Core</RootNamespace>
        <AssemblyName>$(MSBuildProjectName)</AssemblyName>

        <Title>Oxygen Editor Core</Title>
        <Description>Oxygen Editor core services and utilities, including extensions to framework classes.</Description>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageTags>oxygen;gameengine</PackageTags>
        <PackageReleaseNotes>Initial version.</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Testably.Abstractions" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="$(ProjectsRoot)\Config\src\Config.csproj" />
    </ItemGroup>

</Project>
