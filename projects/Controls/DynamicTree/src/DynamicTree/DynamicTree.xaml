<?xml version="1.0" encoding="utf-8" ?>

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dnc="using:DroidNet.Controls">

    <dnc:DropIndicatorEqualsConverter x:Key="DropIndicatorEqualsConverter" />

    <Style BasedOn="{StaticResource DefaultDynamicTreeStyle}" TargetType="dnc:DynamicTree" />

    <Style x:Key="DefaultDynamicTreeStyle" TargetType="dnc:DynamicTree">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="dnc:DynamicTree">
                    <Grid
                        Name="PartRootGrid"
                        Background="{Binding Path=Background, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                        BorderBrush="{Binding Path=BorderBrush, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                        BorderThickness="{Binding Path=BorderThickness, RelativeSource={RelativeSource Mode=TemplatedParent}}">
                        <ScrollViewer>
                            <ItemsRepeater x:Name="PartItemsRepeater" ItemsSource="{Binding Path=DisplayedItems, RelativeSource={RelativeSource Mode=TemplatedParent}, Mode=OneWay}">
                                <ItemsRepeater.ItemTemplate>
                                    <DataTemplate>
                                        <Grid AllowDrop="True">
                                            <Border
                                                Height="2"
                                                Margin="0,-1,0,0"
                                                VerticalAlignment="Top"
                                                Background="{ThemeResource SystemControlHighlightAccentBrush}"
                                                Canvas.ZIndex="1"
                                                IsHitTestVisible="False"
                                                Visibility="{Binding ElementName=PartTreeItem, Path=(dnc:DynamicTree.DropIndicator), Converter={StaticResource DropIndicatorEqualsConverter}, ConverterParameter=Before}" />
                                            <Border
                                                Height="2"
                                                Margin="0,0,0,-1"
                                                VerticalAlignment="Bottom"
                                                Background="{ThemeResource SystemControlHighlightAccentBrush}"
                                                Canvas.ZIndex="1"
                                                IsHitTestVisible="False"
                                                Visibility="{Binding ElementName=PartTreeItem, Path=(dnc:DynamicTree.DropIndicator), Converter={StaticResource DropIndicatorEqualsConverter}, ConverterParameter=After}" />
                                            <dnc:DynamicTreeItem
                                                x:Name="PartTreeItem"
                                                AllowDrop="True"
                                                CanDrag="True"
                                                ItemAdapter="{Binding}" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsRepeater.ItemTemplate>
                            </ItemsRepeater>
                        </ScrollViewer>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
