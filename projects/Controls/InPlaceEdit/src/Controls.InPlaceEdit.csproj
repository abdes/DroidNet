<?xml version="1.0" encoding="utf-8"?>

<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFrameworks>net8.0-windows10.0.26100.0</TargetFrameworks>

        <RootNamespace>$(RootNamespace).Controls</RootNamespace>
        <AssemblyName>DroidNet.Controls.InPlaceEdit</AssemblyName>

        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <UseWinUI>true</UseWinUI>

        <Title>In-place editable controls</Title>
        <Description>Custom controls to facilitate editing in-place, such as editing a label to rename an item with InPlaceEditableLabel.</Description>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageTags>winui;controls;tree;custom</PackageTags>
        <PackageReleaseNotes>Initial version.</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.WindowsAppSDK" />
        <PackageReference Include="Microsoft.Windows.SDK.BuildTools" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Label\" />
    </ItemGroup>

</Project>
