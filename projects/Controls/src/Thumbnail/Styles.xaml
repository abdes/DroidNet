<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Light theme-specific style for empty thumbnail border  -->
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <Color x:Key="EmptyThumbnailBorderColor">Black</Color>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <Color x:Key="EmptyThumbnailBorderColor">White</Color>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <!--  Theme-aware style for the empty thumbnail border  -->
    <Style x:Key="EmptyThumbnailBorderStyle" TargetType="Border">
        <Setter Property="Width" Value="24" />
        <Setter Property="Height" Value="24" />
        <Setter Property="BorderBrush" Value="{ThemeResource EmptyThumbnailBorderColor}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

</ResourceDictionary>
