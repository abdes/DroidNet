<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DroidNet.Controls">

    <Style TargetType="local:ToolBar">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:ToolBar">
                    <Grid
                        x:Name="RootGrid"
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}">
                        <Grid.Resources>
                            <Style TargetType="local:ToolBarButton">
                                <Setter Property="IsCompact" Value="{Binding IsCompact, RelativeSource={RelativeSource TemplatedParent}}" />
                            </Style>
                            <Style TargetType="local:ToolBarToggleButton">
                                <Setter Property="IsCompact" Value="{Binding IsCompact, RelativeSource={RelativeSource TemplatedParent}}" />
                            </Style>
                        </Grid.Resources>
                        <!--  Layered grid for overlay  -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Primary Items  -->
                            <ItemsControl
                                x:Name="PrimaryItemsControl"
                                Grid.Column="0"
                                ItemsSource="{TemplateBinding PrimaryItems}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel
                                            x:Name="PrimaryItemsPanel"
                                            Orientation="Horizontal"
                                            Spacing="4" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>

                            <!--  Secondary Items (right-aligned)  -->
                            <ItemsControl
                                x:Name="SecondaryItemsControl"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                ItemsSource="{TemplateBinding SecondaryItems}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="4" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </Grid>

                        <!--  Overlayed Overflow Button  -->
                        <Button
                            x:Name="OverflowButton"
                            Margin="0,0,4,0"
                            Padding="6,4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            CornerRadius="4"
                            Visibility="{TemplateBinding OverflowButtonVisibility}">
                            <FontIcon FontSize="16" Glyph="&#xE712;" />
                            <Button.Flyout>
                                <MenuFlyout x:Name="OverflowMenuFlyout" Placement="BottomEdgeAlignedRight" />
                            </Button.Flyout>
                        </Button>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
