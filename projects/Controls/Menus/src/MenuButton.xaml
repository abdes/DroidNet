<?xml version="1.0" encoding="utf-8" ?>

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cm="using:DroidNet.Controls.Menus">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DroidNet.Controls.Menus/TransparentButton.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style
        x:Key="DefaultMenuButtonStyle"
        BasedOn="{StaticResource DefaultButtonStyle}"
        TargetType="cm:MenuButton" />

    <!--
        Preserve the implicit default MenuButton style (no key) so controls without a Chrome
        setting still inherit the default styling.
    -->
    <Style BasedOn="{StaticResource DefaultMenuButtonStyle}" TargetType="cm:MenuButton" />

    <!--
        Expose the transparent chrome variant under the key expected by MenuButton.Chrome
        so ApplyChromeStyle can locate and apply it at runtime. It reuses the shared
        TransparentButtonStyle from TransparentButton.xaml.
    -->
    <Style
        x:Key="MenuButtonTransparentStyle"
        BasedOn="{StaticResource TransparentButtonStyle}"
        TargetType="cm:MenuButton" />

</ResourceDictionary>
