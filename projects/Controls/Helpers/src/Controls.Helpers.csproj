<?xml version="1.0" encoding="utf-8"?>

<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFrameworks>net8.0-windows10.0.26100.0</TargetFrameworks>

        <UseWinUI>true</UseWinUI>
        <AllowUnsafeBlocks>True</AllowUnsafeBlocks>

        <Title>DroidNet Controls Helpers</Title>
        <Description>Provides helpers for the implementation of various DroidNet control, including single and multiple selection models.</Description>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageTags>winui;controls;custom;selection</PackageTags>
        <PackageReleaseNotes>Initial version.</PackageReleaseNotes>

        <RootNamespace>$(RootNamespace).Controls</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.WindowsAppSDK" />
        <PackageReference Include="Microsoft.Windows.SDK.BuildTools" />
    </ItemGroup>

</Project>
