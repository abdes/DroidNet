<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="DroidNet.Controls.Demo.InPlaceEdit.InPlaceEditDemoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:DroidNet.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DroidNet.Controls.Demo.InPlaceEdit"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Reusable panel style for demo borders  -->
        <Style x:Key="DemoPanelBorderStyle" TargetType="Border">
            <!--  Padding changed to 16 to align with 4â€‘epx guideline  -->
            <Setter Property="Padding" Value="16" />
            <Setter Property="Background" Value="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource DividerStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
        </Style>
    </Page.Resources>

    <Grid>
        <ScrollViewer>
            <StackPanel
                Margin="20"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Spacing="20">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Simple editable label. Double-click to edit..." />
                <Border Style="{StaticResource DemoPanelBorderStyle}">
                    <controls:InPlaceEditableLabel Text="{x:Bind ViewModel.Label, Mode=TwoWay}">
                        <TextBlock FontSize="14" Foreground="Coral" />
                    </controls:InPlaceEditableLabel>
                </Border>

                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Editable label, With validation, does not allow the letters 'a' or 'A'. Double-click to edit..." />
                <Border Style="{StaticResource DemoPanelBorderStyle}">
                    <controls:InPlaceEditableLabel x:Name="ValidatedInput" Text="{x:Bind ViewModel.Label, Mode=TwoWay}">
                        <TextBlock FontSize="14" Foreground="Coral" />
                    </controls:InPlaceEditableLabel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
