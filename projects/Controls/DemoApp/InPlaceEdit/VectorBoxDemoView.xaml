<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="DroidNet.Controls.Demo.InPlaceEdit.VectorBoxDemoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:DroidNet.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DroidNet.Controls.Demo.InPlaceEdit"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Reusable panel style for demo borders  -->
        <Style x:Key="DemoPanelBorderStyle" TargetType="Border">
            <!--  Padding changed to 16 to align with 4‑epx guideline  -->
            <Setter Property="Padding" Value="16" />
            <Setter Property="Background" Value="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource DividerStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
        </Style>
    </Page.Resources>

    <Grid>
        <ScrollViewer>
            <StackPanel
                Margin="20"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Spacing="20">

                <!--  Vector with Custom Mask  -->
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Vector with Degrees Mask (###.##°)" />
                <Border Style="{StaticResource DemoPanelBorderStyle}">
                    <controls:VectorBox
                        x:Name="RotationVector"
                        ComponentLabelPosition="Left"
                        ComponentMask="###.##°"
                        Dimension="3"
                        Label="Rotation"
                        LabelPosition="Left"
                        XValue="{x:Bind ViewModel.RotationX, Mode=TwoWay}"
                        YValue="{x:Bind ViewModel.RotationY, Mode=TwoWay}"
                        ZValue="{x:Bind ViewModel.RotationZ, Mode=TwoWay}" />
                </Border>

                <!--  Vector with Per-Component Masks  -->
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Vector with Per-Component Masks (X: ±###.#, Y: ##.##, Z: ~.###)" />
                <Border Style="{StaticResource DemoPanelBorderStyle}">
                    <controls:VectorBox
                        x:Name="MixedMaskVector"
                        ComponentLabelPosition="Top"
                        Dimension="3"
                        Label="Custom Masks"
                        LabelPosition="Top"
                        XValue="{x:Bind ViewModel.MixedMaskX, Mode=TwoWay}"
                        YValue="{x:Bind ViewModel.MixedMaskY, Mode=TwoWay}"
                        ZValue="{x:Bind ViewModel.MixedMaskZ, Mode=TwoWay}" />
                </Border>

                <!--  Validation Demo  -->
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Vector with Validation (Range: -180 to 180)" />
                <Border Style="{StaticResource DemoPanelBorderStyle}">
                    <controls:VectorBox
                        x:Name="ValidatedVector"
                        ComponentLabelPosition="Left"
                        ComponentMask="###.##°"
                        Dimension="3"
                        Label="Constrained"
                        LabelPosition="Left"
                        XValue="{x:Bind ViewModel.ConstrainedX, Mode=TwoWay}"
                        YValue="{x:Bind ViewModel.ConstrainedY, Mode=TwoWay}"
                        ZValue="{x:Bind ViewModel.ConstrainedZ, Mode=TwoWay}" />
                </Border>

                <!--  Indeterminate Demo  -->
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Indeterminate Presentation (Multi-Selection Scenario)" />
                <Border Style="{StaticResource DemoPanelBorderStyle}">
                    <StackPanel
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Orientation="Vertical"
                        Spacing="10">
                        <controls:VectorBox
                            x:Name="IndeterminateVector"
                            ComponentLabelPosition="Left"
                            ComponentMask="~.##"
                            Dimension="3"
                            IndeterminateDisplayText="-.-"
                            Label="Mixed Values"
                            LabelPosition="Left"
                            XIsIndeterminate="{x:Bind ViewModel.IsIndeterminateX, Mode=TwoWay}"
                            XValue="{x:Bind ViewModel.IndeterminateX, Mode=TwoWay}"
                            YIsIndeterminate="{x:Bind ViewModel.IsIndeterminateY, Mode=TwoWay}"
                            YValue="{x:Bind ViewModel.IndeterminateY, Mode=TwoWay}"
                            ZIsIndeterminate="{x:Bind ViewModel.IsIndeterminateZ, Mode=TwoWay}"
                            ZValue="{x:Bind ViewModel.IndeterminateZ, Mode=TwoWay}" />

                        <StackPanel
                            Margin="0,10,0,0"
                            Orientation="Horizontal"
                            Spacing="10">
                            <Button Click="ToggleXIndeterminate_Click" Content="Toggle X Indeterminate" />
                            <Button Click="ToggleYIndeterminate_Click" Content="Toggle Y Indeterminate" />
                            <Button Click="ToggleZIndeterminate_Click" Content="Toggle Z Indeterminate" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--  Comprehensive VectorBox Control Panel  -->
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="VectorBox Control Panel (All Configuration Options)" />
                <Border Style="{StaticResource DemoPanelBorderStyle}">
                    <StackPanel Spacing="15">
                        <!--  Dimension Selection  -->
                        <StackPanel Spacing="8">
                            <TextBlock FontWeight="Bold" Text="Dimension:" />
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <RadioButton
                                    Checked="Dimension_Changed"
                                    Content="2D"
                                    GroupName="Dimension"
                                    Tag="2" />
                                <RadioButton
                                    Checked="Dimension_Changed"
                                    Content="3D"
                                    GroupName="Dimension"
                                    IsChecked="True"
                                    Tag="3" />
                            </StackPanel>
                        </StackPanel>

                        <!--  Label Position Selection  -->
                        <StackPanel Spacing="8">
                            <TextBlock FontWeight="Bold" Text="Label Position:" />
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <RadioButton
                                    Checked="LabelPosition_Changed"
                                    Content="Left"
                                    GroupName="LabelPos"
                                    IsChecked="True"
                                    Tag="Left" />
                                <RadioButton
                                    Checked="LabelPosition_Changed"
                                    Content="Right"
                                    GroupName="LabelPos"
                                    Tag="Right" />
                                <RadioButton
                                    Checked="LabelPosition_Changed"
                                    Content="Top"
                                    GroupName="LabelPos"
                                    Tag="Top" />
                                <RadioButton
                                    Checked="LabelPosition_Changed"
                                    Content="Bottom"
                                    GroupName="LabelPos"
                                    Tag="Bottom" />
                                <RadioButton
                                    Checked="LabelPosition_Changed"
                                    Content="None"
                                    GroupName="LabelPos"
                                    Tag="None" />
                            </StackPanel>
                        </StackPanel>

                        <!--  Component Label Position  -->
                        <StackPanel Spacing="8">
                            <TextBlock FontWeight="Bold" Text="Component Label Position:" />
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <RadioButton
                                    Checked="ComponentLabelPosition_Changed"
                                    Content="Left"
                                    GroupName="CompLabelPos"
                                    Tag="Left" />
                                <RadioButton
                                    Checked="ComponentLabelPosition_Changed"
                                    Content="Right"
                                    GroupName="CompLabelPos"
                                    Tag="Right" />
                                <RadioButton
                                    Checked="ComponentLabelPosition_Changed"
                                    Content="Top"
                                    GroupName="CompLabelPos"
                                    Tag="Top" />
                                <RadioButton
                                    Checked="ComponentLabelPosition_Changed"
                                    Content="Bottom"
                                    GroupName="CompLabelPos"
                                    Tag="Bottom" />
                                <RadioButton
                                    Checked="ComponentLabelPosition_Changed"
                                    Content="None"
                                    GroupName="CompLabelPos"
                                    IsChecked="True"
                                    Tag="None" />
                            </StackPanel>
                        </StackPanel>

                        <!--  Mask Selection  -->
                        <StackPanel Spacing="8">
                            <TextBlock FontWeight="Bold" Text="Component Mask:" />
                            <ComboBox x:Name="VectorMaskComboBox" SelectionChanged="VectorMask_Changed">
                                <ComboBoxItem>~.#</ComboBoxItem>
                                <ComboBoxItem>~.##</ComboBoxItem>
                                <ComboBoxItem>###.##</ComboBoxItem>
                                <ComboBoxItem>###.#°</ComboBoxItem>
                                <ComboBoxItem>-###.##</ComboBoxItem>
                                <ComboBoxItem>±###.#</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <!--  Multiplier  -->
                        <StackPanel Spacing="8">
                            <TextBlock FontWeight="Bold" Text="Multiplier:" />
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <RadioButton
                                    Checked="VectorMultiplier_Changed"
                                    Content="1"
                                    GroupName="VectorMultiplier"
                                    IsChecked="True"
                                    Tag="1" />
                                <RadioButton
                                    Checked="VectorMultiplier_Changed"
                                    Content="5"
                                    GroupName="VectorMultiplier"
                                    Tag="5" />
                                <RadioButton
                                    Checked="VectorMultiplier_Changed"
                                    Content="10"
                                    GroupName="VectorMultiplier"
                                    Tag="10" />
                            </StackPanel>
                        </StackPanel>

                        <!--  Value Alignment  -->
                        <StackPanel Spacing="8">
                            <TextBlock FontWeight="Bold" Text="Value Alignment:" />
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <RadioButton
                                    Checked="VectorValueAlignment_Changed"
                                    Content="Left"
                                    GroupName="VectorValueAlign"
                                    Tag="Left" />
                                <RadioButton
                                    Checked="VectorValueAlignment_Changed"
                                    Content="Center"
                                    GroupName="VectorValueAlign"
                                    IsChecked="True"
                                    Tag="Center" />
                                <RadioButton
                                    Checked="VectorValueAlignment_Changed"
                                    Content="Right"
                                    GroupName="VectorValueAlign"
                                    Tag="Right" />
                            </StackPanel>
                        </StackPanel>

                        <!--  The VectorBox  -->
                        <StackPanel Spacing="8">
                            <TextBlock FontWeight="Bold" Text="Preview:" />
                            <controls:VectorBox
                                x:Name="ConfigurableVectorBox"
                                ComponentLabelPosition="None"
                                ComponentMask="~.##"
                                Dimension="3"
                                Label="Configurable"
                                LabelPosition="Left"
                                Multiplier="1" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--  Display Current Values  -->
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Current Values" />
                <Border Margin="0,0,0,0" Style="{StaticResource DemoPanelBorderStyle}">
                    <StackPanel Spacing="8">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Text="Current Values" />
                        <TextBlock>
                            <Run FontWeight="Bold" Text="Basic 3D:" />
                            <Run Text="{x:Bind ViewModel.Position3DX, Mode=OneWay}" />
                            <Run Text="," />
                            <Run Text="{x:Bind ViewModel.Position3DY, Mode=OneWay}" />
                            <Run Text="," />
                            <Run Text="{x:Bind ViewModel.Position3DZ, Mode=OneWay}" />
                        </TextBlock>
                        <TextBlock>
                            <Run FontWeight="Bold" Text="Scale 2D:" />
                            <Run Text="{x:Bind ViewModel.Scale2DX, Mode=OneWay}" />
                            <Run Text="," />
                            <Run Text="{x:Bind ViewModel.Scale2DY, Mode=OneWay}" />
                        </TextBlock>
                        <TextBlock>
                            <Run FontWeight="Bold" Text="Rotation:" />
                            <Run Text="{x:Bind ViewModel.RotationX, Mode=OneWay}" />
                            <Run Text="," />
                            <Run Text="{x:Bind ViewModel.RotationY, Mode=OneWay}" />
                            <Run Text="," />
                            <Run Text="{x:Bind ViewModel.RotationZ, Mode=OneWay}" />
                        </TextBlock>
                        <TextBlock>
                            <Run FontWeight="Bold" Text="Constrained (must be -180 to 180):" />
                            <Run Text="{x:Bind ViewModel.ConstrainedX, Mode=OneWay}" />
                            <Run Text="," />
                            <Run Text="{x:Bind ViewModel.ConstrainedY, Mode=OneWay}" />
                            <Run Text="," />
                            <Run Text="{x:Bind ViewModel.ConstrainedZ, Mode=OneWay}" />
                        </TextBlock>
                        <StackPanel Margin="0,10,0,0" Spacing="4">
                            <TextBlock FontWeight="Bold" Text="Indeterminate State:" />
                            <TextBlock Text="{x:Bind ViewModel.IndeterminateStatusText, Mode=OneWay}" TextWrapping="Wrap" />
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
