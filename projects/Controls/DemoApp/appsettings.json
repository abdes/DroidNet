{
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": "Verbose",
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "File",
                "Args": { "path": "Logs/log.txt" }
            }
        ],
        "Enrich": [ "FromLogContext", "WithThreadId" ],
        "Properties": {
            "Application": "DemoApp"
        }
    }
}
