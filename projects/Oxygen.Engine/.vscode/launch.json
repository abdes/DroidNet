{
  // VS Code launch configuration for Oxygen.Engine examples
  // Adjust the "program" path for other targets as needed.
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(ImportTool) Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/out/build/bin/Debug/Oxygen.Content.ImportTool.exe",
      "args": ["batch", "--manifest", "Examples/TexturedCube/import_manifest.json"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "console": "externalTerminal"
    },
    {
      "name": "Debug: Oxygen.Examples.Async (MSVC)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/out/build/bin/Debug/Oxygen.Examples.Async.exe",
      "args": ["-v", "2"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "internalConsoleOptions": "neverOpen",
      "console": "externalTerminal",
    },
    {
      "name": "(Dump PAK Simple) Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/out/build/bin/Debug/Oxygen.Content.DumpPakFile.exe",
      "args": [
        "src/Oxygen/Content/Test/TestData/Simple.pak",
        "--verbose"
      ],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "environment": []
    }
  ]
}
