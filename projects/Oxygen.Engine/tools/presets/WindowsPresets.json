{
  "version": 6,
  "include": [
    "./BasePresets.json"
  ],
  "configurePresets": [
    {
      "name": "windows",
      "inherits": "base",
      "installDir": "${sourceDir}/out/install",
      "cacheVariables": {
        "USE_PIX": "ON"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Windows"
          ],
          "enableMicrosoftCodeAnalysis": true,
          "enableClangTidyCodeAnalysis": true
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-debug",
      "inherits": "base-debug",
      "configurePreset": "windows"
    },
    {
      "name": "windows-release",
      "inherits": "base-release",
      "configurePreset": "windows"
    },
    {
      "name": "windows-relwithdebinfo",
      "inherits": "base-relwithdebinfo",
      "configurePreset": "windows"
    }
  ],
  "testPresets": [
    {
      "name": "test-windows",
      "inherits": [
        "test-base"
      ],
      "configurePreset": "windows",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ]
}
