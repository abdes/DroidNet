<?xml version="1.0" encoding="utf-8"?>

<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>

        <Title>Sample .Net Class Library</Title>
        <Description>A sample, and a template project, for creating DroidNet .Net class libraries.</Description>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageTags>sample;library</PackageTags>
        <PackageReleaseNotes>Initial version.</PackageReleaseNotes>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>

        <RootNamespace>$(RootNamespace).NetClassLibrary</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

</Project>
